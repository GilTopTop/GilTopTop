3. JavaScript (script.js)
javascript
Copiar código
function choose(option) {
    let story = document.getElementById('story');

    switch (option) {
        case 1:
            story.innerHTML = "Você decidiu explorar a Floresta das Ideias Perdidas. Enigmas e segredos aguardam por você!";
            document.getElementById('choices').innerHTML = `
                <button onclick="choose(4)">Resolver um enigma filosófico</button>
                <button onclick="choose(5)">Encontrar um campeão luminoso</button>
            `;
            break;
        case 2:
            story.innerHTML = "Você visitou o Sábio Alquimista. Ele oferece poções mágicas!";
            document.getElementById('choices').innerHTML = `
                <button onclick="choose(6)">Aceitar uma poção</button>
                <button onclick="choose(7)">Recusar e voltar para a arena</button>
            `;
            break;
        case 3:
            story.innerHTML = "Você se prepara para a batalha. Os campeões estão prontos!";
            document.getElementById('choices').innerHTML = `
                <button onclick="choose(8)">Desafiar um oponente</button>
                <button onclick="choose(9)">Estudar suas cartas</button>
            `;
            break;
        case 4:
            story.innerHTML = "Você resolveu o enigma e ganhou um ponto de sabedoria!";
            document.getElementById('choices').innerHTML = `
                <button onclick="resetGame()">Voltar ao início</button>
            `;
            break;
        case 5:
            story.innerHTML = "Você encontrou um campeão luminoso e agora tem mais força em suas batalhas!";
            document.getElementById('choices').innerHTML = `
                <button onclick="resetGame()">Voltar ao início</button>
            `;
            break;
        case 6:
            story.innerHTML = "Você aceita a poção! Prepare-se para usá-la na batalha!";
            document.getElementById('choices').innerHTML = `
                <button onclick="resetGame()">Voltar ao início</button>
            `;
            break;
        case 7:
            story.innerHTML = "Você decide voltar para a arena, sem a poção.";
            document.getElementById('choices').innerHTML = `
                <button onclick="resetGame()">Voltar ao início</button>
            `;
            break;
        case 8:
            story.innerHTML = "Você desafiou um oponente e começou a batalha!";
            document.getElementById('choices').innerHTML = `
                <button onclick="resetGame()">Voltar ao início</button>
            `;
            break;
        case 9:
            story.innerHTML = "Você estuda suas cartas e se prepara para uma estratégia!";
            document.getElementById('choices').innerHTML = `
                <button onclick="resetGame()">Voltar ao início</button>
            `;
            break;
    }
}

function resetGame() {
    document.getElementById('story').innerHTML = "Sua jornada começa em Topa Lumina. O que você deseja fazer?";
    document.getElementById('choices').innerHTML = `
        <button onclick="choose(1)">Explorar a Floresta das Ideias Perdidas</button>
        <button onclick="choose(2)">Visitar o Sábio Alquimista</button>
        <button onclick="choose(3)">Preparar-se para a Batalha</button>
    `;
}
